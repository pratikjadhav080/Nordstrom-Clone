               {
                    e.preventDefault();

                    let old= document.getElementById("old").value.trim();
                    let newp= document.getElementById("new").value.trim();
                    let cnewp= document.getElementById("cnew").value.trim();
                    let progressholder=document.getElementById("progress_holder");
                    let progress=document.getElementById("progress");
                    progressholder.style.display='block';
                    progress.style.width="15%";
                    progress.setAttribute("aria-valuenow" ,"15");
                    progress.innerText="15%";


               
                    




               }



